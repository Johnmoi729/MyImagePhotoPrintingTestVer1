{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",              
      "Override": {
        "Microsoft": "Information",    
        "System": "Information"
      }
    }
  },

  
  "ConnectionStrings": {
    "MongoDB": "mongodb://myimage_app:myimage_app_password@localhost:27017/myimage?authSource=myimage",
    "Redis": "localhost:6379"
  },

  
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "https://localhost:4200",
      "http://localhost:3000"          
    ]
  },

  "EmailSettings": {
    "Provider": "Console"
  },

  "StripeSettings": {
    "PublicKey": "pk_test_your_test_public_key_here",
    "SecretKey": "sk_test_your_test_secret_key_here"
  },

  "RateLimiting": {
    "GeneralRequests": {
      "PermitLimit": 1000,             
      "WindowMinutes": 1
    },
    "FileUpload": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    }
  },

  "FeatureFlags": {
    "EnableAIPhotoEnhancement": false, 
    "EnableBulkDiscounts": true,
    "EnableGuestCheckout": true,       
    "EnableSocialLogin": false,
    "MaintenanceMode": false
  }
}