{
  
  "ConnectionStrings": {
   
    "MongoDB": "mongodb://myimage_app:myimage_app_password@localhost:27017/myimage?authSource=myimage",
    "Redis": "localhost:6379"
  },


  "JwtSettings": {
    
    "Secret": "your-super-secret-jwt-key-that-should-be-very-long-and-secure-for-production-use",
    "Issuer": "MyImage.API",           
    "Audience": "MyImage.Users",       
    "ExpirationMinutes": 60,           
    "RefreshTokenExpirationDays": 30   
  },

  "StorageSettings": {
    
    "Provider": "Local",  
    
    "LocalStorage": {
      "BasePath": "uploads",           
      "PhotosPath": "photos",          
      "ThumbnailsPath": "thumbnails",  
      "TempPath": "temp"               
    },
    
    
    "AzureStorage": {
      "ConnectionString": "",          
      "ContainerName": "photos",       
      "CdnUrl": ""                     
    },
    
    "GridFS": {
      "BucketName": "photos"           
    }
  },

  
  "StripeSettings": {
    "PublicKey": "pk_test_your_stripe_public_key_here",
    
    "SecretKey": "",
    
    "WebhookSecret": "",
    
    "SupportedCurrencies": ["USD", "EUR", "GBP"]
  },

  
  "EmailSettings": {
    
    "Provider": "Console",  
    
    
    "SendGrid": {
      "ApiKey": "",                    
      "FromEmail": "noreply@myimage.com",
      "FromName": "MyImage Photo Printing"
    },
    
    
    "Smtp": {
      "Host": "",
      "Port": 587,
      "EnableSsl": true,
      "Username": "",
      "Password": "",
      "FromEmail": "noreply@myimage.com",
      "FromName": "MyImage Photo Printing"
    }
  },

  
  "ImageProcessing": {
    "MaxFileSize": 52428800,           
    "AllowedFormats": ["jpg", "jpeg", "png", "tiff"],  
    "ThumbnailSize": 300,              
    "PreviewSize": 800,                
    "CompressionQuality": 85,          
    "MaxImageDimension": 8000,         
    "GenerateWatermarks": false        
  },

  
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:4200",         
      "https://localhost:4200"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization"],
    "AllowCredentials": true
  },

  
  "RateLimiting": {
    "GeneralRequests": {
      "PermitLimit": 100,              
      "WindowMinutes": 1               
    },
    "FileUpload": {
      "PermitLimit": 20,               
      "WindowMinutes": 1               
    },
    "Authentication": {
      "PermitLimit": 10,               
      "WindowMinutes": 1               
    }
  },

 
  "BusinessRules": {
    "MinimumOrderAmount": 10.00,       
    "MaximumOrderAmount": 1000.00,     
    "MaxPhotosPerUpload": 50,          
    "CartExpirationDays": 14,          
    "OrderCancellationHours": 24       
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",        
      "Override": {
        "Microsoft": "Warning",        
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        
        "Name": "File",
        "Args": {
          "path": "logs/myimage-.log",
          "rollingInterval": "Day",     
          "retainedFileCountLimit": 30  
        }
      }
    ]
  },

  "FeatureFlags": {
    "EnableAIPhotoEnhancement": false, 
    "EnableBulkDiscounts": true,       
    "EnableGuestCheckout": false,      
    "EnableSocialLogin": false,        
    "MaintenanceMode": false           
  }
}